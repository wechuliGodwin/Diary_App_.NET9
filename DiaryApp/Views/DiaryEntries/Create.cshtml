@model DiaryEntry

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Create Diary entry</h2>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="form-group-lg mb-3">
                        <label asp-for="Title" class="form-label"
                        >Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter title "/>
                    </div>
                    <div class="form-group-lg mb-3">
                        <label asp-for="Content" class="form-label">Content</label>
                        <input asp-for="Content" class="form-control" placeholder="Enter activity " />
                    </div>
                    <div class="form-group-lg mb-3">
                        <label asp-for="Created" class="form-label">Created</label>
                        <input asp-for="Created" class="form-control" type="date" />
                    </div> 

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a asp-controller="DiaryEntries" asp-action="Index" class="btn btn-secondary">Close</a>
                    </div>

                </form>
            </div>
            
        </div>
    </div>
</div>